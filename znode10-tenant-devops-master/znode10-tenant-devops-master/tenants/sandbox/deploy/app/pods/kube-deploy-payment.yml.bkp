--- 

apiVersion: apps/v1
kind: Deployment
metadata:
  annotations:
    znodekube.version: "10.0"
  creationTimestamp: null
  labels:
    service: znode10xpayment
  name: znode10xpayment
spec:
  replicas: 1
  selector:
    matchLabels:
      service: znode10xpayment
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
  template:
    metadata:
      annotations:
        znodekube.version: "10.0"
      creationTimestamp: null
      labels:
        io.znodekube.network/znode10xapinetworkexternal: "true"
        io.znodekube.network/znode10xmongonetwork: "true"
        service: znode10xpayment
    spec:
      affinity:
        nodeAffinity:
            requiredDuringSchedulingIgnoredDuringExecution:
                nodeSelectorTerms:
                - matchExpressions:
                    - key: agentpool
                      operator: In
                      values:
                      - znode10upl
      volumes: 
        - name: pfx-certs
          secret:
            secretName: amla-pfx-secret
            
      imagePullSecrets:
        - name: znodeprodacrsecret
          
      containers:
        - envFrom:
          - configMapRef:
              name: payment-configmap


          image: znode10xregistry.azurecr.io/znode10payment:latest
          lifecycle:
            preStop:
              exec:
                command: ["/bin/sh", "-c", "sleep 120"]
 
          resources:
            requests:
                memory: 400Mi
                cpu: 100m
            limits:
                memory: 450Mi
                cpu: 150m
          imagePullPolicy: Always
          name: znode10xpayment
          ports:
            - containerPort: 443 
          volumeMounts:
            - name: pfx-certs
              mountPath: /app/pfx
              readOnly: true
      # restartPolicy: Always
status: {}

          
---
